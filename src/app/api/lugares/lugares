// src/app/api/lugares/route.ts
import { NextRequest, NextResponse } from "next/server";
import { prisma } from "@/lib/prisma";
import { getTenantContext } from "@/lib/tenant";

function buildBaseWhere(ctx: any) {
  const where: any = {};

  if (ctx.isSuperadmin) {
    // SUPERADMIN: si est√° en modo tenant, filtramos por ese admin
    if (ctx.tenantAdminId) {
      where.adminId = ctx.tenantAdminId;
    }
  } else if (ctx.isAdmin) {
    // ADMIN: siempre por su tenantAdminId
    if (!ctx.tenantAdminId) {
      throw new Error("TENANT_INVALIDO");
    }
    where.adminId = ctx.tenantAdminId;
  } else if (ctx.isAgente) {
    // AGENTE: solo sus lugares
    if (!ctx.agenteId) {
      throw new Error("AGENTE_SIN_ID");
    }
    where.agenteId = ctx.agenteId;
  } else {
    throw new Error("NO_PERMITIDO");
  }

  // Por defecto no mostramos ocultos
  where.ocultoParaAdmin = false;

  return where;
}

// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
// GET /api/lugares
// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
export async function GET(req: NextRequest) {
  const ctx = await getTenantContext(req);
  if (!ctx.ok) {
    return NextResponse.json({ error: "No autorizado" }, { status: 401 });
  }

  let where: any;
  try {
    where = buildBaseWhere(ctx);
  } catch (e: any) {
    if (e.message === "NO_PERMITIDO") {
      return NextResponse.json(
        { error: "Solo SUPERADMIN, ADMIN o AGENTE pueden ver lugares" },
        { status: 403 }
      );
    }
    return NextResponse.json(
      { error: "Configuraci√≥n de tenant inv√°lida" },
      { status: 400 }
    );
  }

  const lugares = await prisma.lugar.findMany({
    where,
    include: {
      agente: {
        select: { id: true, nombre: true, email: true },
      },
      _count: {
        select: {
          comparativas: true,
          leads: true,
          usuarios: true,
        },
      },
    },
    orderBy: { id: "desc" },
  });

  return NextResponse.json(lugares);
}

// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
// POST /api/lugares
// (crear lugar)
// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
export async function POST(req: NextRequest) {
  const ctx = await getTenantContext(req);
  if (!ctx.ok) {
    return NextResponse.json({ error: "No autorizado" }, { status: 401 });
  }

  const body = await req.json().catch(() => ({}));
  const {
    nombre,
    direccion,
    qrCode,
    agenteId,
    pctCliente,
    pctLugar,
    especial,
    especialLogoUrl,
    especialColor,
    especialMensaje,
    aportacionAcumulada,
    especialCartelUrl,
    adminId: adminIdFromBody, // üëà lo recibimos del formulario (solo SUPERADMIN)
  } = body || {};

  if (!nombre || !direccion || !qrCode || !agenteId) {
    return NextResponse.json(
      { error: "Nombre, direcci√≥n, QR y agente son obligatorios" },
      { status: 400 }
    );
  }

  // üîê Determinar adminId (due√±o del lugar)
  let adminId: number | null = null;

  if (ctx.isSuperadmin) {
    // SUPERADMIN:
    // 1) si viene en el body, usamos ese admin
    // 2) si est√° en modo tenant (?adminId=...), usamos ese
    if (adminIdFromBody) {
      adminId = Number(adminIdFromBody);
    } else if (ctx.tenantAdminId) {
      adminId = Number(ctx.tenantAdminId);
    }

    if (!adminId || !Number.isFinite(adminId)) {
      return NextResponse.json(
        { error: "Debes seleccionar un ADMIN propietario para el lugar" },
        { status: 400 }
      );
    }

    // (Opcional pero recomendado) verificar que existe y es ADMIN
    const adminUsuario = await prisma.usuario.findUnique({
      where: { id: adminId },
      select: { id: true, rol: true },
    });
    if (!adminUsuario || adminUsuario.rol !== "ADMIN") {
      return NextResponse.json(
        { error: "El ADMIN seleccionado no es v√°lido" },
        { status: 400 }
      );
    }
  } else if (ctx.isAdmin) {
    // ADMIN: el admin es el propio tenant
    adminId =
      (ctx.tenantAdminId && Number(ctx.tenantAdminId)) || ctx.userId || null;
  } else if (ctx.isAgente) {
    // (si en alg√∫n momento permites que el agente cree lugares)
    // podr√≠as decidir aqu√≠ c√≥mo establecer adminId (por ejemplo, el admin del agente)
    // De momento, lo bloqueamos:
    return NextResponse.json(
      { error: "Solo SUPERADMIN o ADMIN pueden crear lugares" },
      { status: 403 }
    );
  } else {
    return NextResponse.json(
      { error: "Solo SUPERADMIN o ADMIN pueden crear lugares" },
      { status: 403 }
    );
  }

  try {
    const lugar = await prisma.lugar.create({
      data: {
        nombre,
        direccion,
        qrCode,
        agenteId: Number(agenteId),
        pctCliente: pctCliente != null ? Number(pctCliente) : null,
        pctLugar: pctLugar != null ? Number(pctLugar) : null,
        especial: !!especial,
        especialLogoUrl: especialLogoUrl || null,
        especialColor: especialColor || null,
        especialMensaje: especialMensaje || null,
        aportacionAcumulada: Number(aportacionAcumulada || 0),
        especialCartelUrl: especialCartelUrl || null,
        adminId, // üëà muy importante para la trazabilidad
      },
      include: {
        agente: {
          select: { id: true, nombre: true, email: true },
        },
        _count: {
          select: {
            comparativas: true,
            leads: true,
            usuarios: true,
          },
        },
      },
    });

    return NextResponse.json(lugar);
  } catch (e: any) {
    console.error("Error creando lugar:", e);
    if (e.code === "P2002") {
      return NextResponse.json(
        { error: "El c√≥digo QR ya est√° en uso" },
        { status: 400 }
      );
    }
    return NextResponse.json(
      { error: "Error al crear lugar" },
      { status: 500 }
    );
  }
}
